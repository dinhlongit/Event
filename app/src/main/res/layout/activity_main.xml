<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/c_c_ki_u_l_p_tr_nh_s_ki_n"
            android:background="@color/bllue"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/large_size"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"

        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/soa"
            android:textSize="@dimen/large_size"
            />

        <EditText
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"

        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/sobb"
            android:textSize="@dimen/large_size"
            />

        <EditText
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />





    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:paddingBottom="@dimen/padding_tv"
          android:id="@+id/tvketqua"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/bllue"
          android:gravity="center"
          android:textSize="@dimen/large_size_1"
          android:textColor="@color/white"

          />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnKQ1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"

            android:text="Tổng 2 Số Dùng ONCLICK in XML"
            android:onClick="xuLyKetQua"
            />




    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnKQ2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng 2 Số Dùng Anonymous listener"
            android:textSize="@dimen/textsize"
            android:onClick="xuLyKetQua"
            />




    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnKQ3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize"
            android:text="Tổng 2 Số Dùng Activity is listener"
            android:onClick="xuLyKetQua"
            />




    </LinearLayout>



    </LinearLayout>